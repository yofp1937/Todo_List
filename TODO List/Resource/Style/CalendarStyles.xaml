<!-- Calendar의 Style을 정의하는곳 -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- WeekHeader Style -->
  <!-- Border는 BaseBorderStyle에서 변동 없음 -->
  <Style TargetType="Border" x:Key="WeekHeaderBorderStyle" BasedOn="{StaticResource BaseBorderStyle}">    
  </Style>
  <!-- TextBlock은 15pt 크기에 폰트는 진하게, 정렬은 전부 가운데 정렬 -->
  <Style TargetType="TextBlock" x:Key="WeekHeaderTextStyle">
    <Setter Property="FontSize" Value="15"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="TextAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  
  
  
  <!-- Calendar Style -->
  <!-- 메인 달력의 Border는 BaseBorderStyle을 상속받아 사용한다. -->
  <Style TargetType="Border" x:Key="CalendarDayBorderStyle" BasedOn="{StaticResource BaseBorderStyle}">
      <Style.Triggers>
         <!-- IsCurrentMonth의 값이 false면 테두리 회색으로 변경 -->
          <DataTrigger Binding="{Binding IsCurrentMonth}" Value="false">
              <Setter Property="BorderBrush" Value="DimGray"/>
          </DataTrigger>
          <!-- IsToday의 값이 true면 테두리 초록색으로 변경 -->
          <DataTrigger Binding="{Binding IsToday}" Value="true">
              <Setter Property="BorderBrush" Value="Green"/>
          </DataTrigger>
          <!-- IsCurrentMonth의 값이 True고, DayOfWeek의 값이 Sunday면 테두리 짙은 빨간색으로 변경 -->
          <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                  <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                  <Condition Binding="{Binding DayOfWeek}" Value="Sunday"/>
              </MultiDataTrigger.Conditions>
              <Setter Property="BorderBrush" Value="Crimson"/>
          </MultiDataTrigger>
         <!-- IsCurrent의 값이 True고, DayOfWeek의 값이 Saturday면 테두리 파란색으로 변경 -->
          <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                  <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                  <Condition Binding="{Binding DayOfWeek}" Value="Saturday"/>
              </MultiDataTrigger.Conditions>
              <Setter Property="BorderBrush" Value="Blue"/>
          </MultiDataTrigger>
      </Style.Triggers>
  </Style>
  <!-- TextBlock의 기본 색상은 Black, 내용은 왼쪽 상단에 표시되게 설정 -->
  <Style TargetType="TextBlock" x:Key="CalendarDayTextStyle">
      <Setter Property="Foreground" Value="Black"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
      <Setter Property="TextAlignment" Value="Left"/>
      
      <Style.Triggers>
          <!-- IsCurrentMonth의 값이 false면 글씨 회색으로 변경하고, 크기는 10pt, 폰트는 이탤릭체(기울어짐)로 변경 -->
          <DataTrigger Binding="{Binding IsCurrentMonth}" Value="false">
              <Setter Property="Foreground" Value="DimGray"/>
              <Setter Property="FontSize" Value="10"/>
              <Setter Property="FontStyle" Value="Italic"/>
          </DataTrigger>
          <!-- IsToday의 값이 true면 글씨 초록색으로 변경 -->
          <DataTrigger Binding="{Binding IsToday}" Value="true">
              <Setter Property="Foreground" Value="Green"/>
          </DataTrigger>
          <!-- IsCurrentMonth가 true고, DayOfWeek이 Sunday면 글씨 짙은 빨간색으로 변경 -->
          <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                  <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                  <Condition Binding="{Binding DayOfWeek}" Value="Sunday"/>
              </MultiDataTrigger.Conditions>
              <Setter Property="Foreground" Value="Crimson"/>
          </MultiDataTrigger>
          <!-- IsCurrentMonth가 true고, DayOfWeek이 Saturday면 글씨 파란색으로 변경 -->
          <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                  <Condition Binding="{Binding IsCurrentMonth}" Value="True"/>
                  <Condition Binding="{Binding DayOfWeek}" Value="Saturday"/>
              </MultiDataTrigger.Conditions>
              <Setter Property="Foreground" Value="Blue"/>
          </MultiDataTrigger>
      </Style.Triggers>
  </Style>

</ResourceDictionary>