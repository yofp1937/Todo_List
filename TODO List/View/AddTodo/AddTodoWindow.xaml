<!-- 규칙 추가, 일정 추가를 눌렀을때 나오는 Window 창 -->
<Window x:Class="TODO_List.View.AddTodo.AddTodoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TODO_List.ViewModel"
             xmlns:util="clr-namespace:TODO_List.Common.Util"
        
             Title="일정 추가 윈도우" Height="400"
             WindowStyle="None"
             WindowStartupLocation="CenterOwner"
             Style="{StaticResource TodoWindowChrome}"
             ResizeMode="NoResize"
             Background="LightGray">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <!-- 창 테두리용 Border -->
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <!-- 1.타이틀 바        
                   2.내부 내용(날짜(주기) 선택, 제목, 내용 등)
                   3.등록, 취소 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <!-- 커스텀 타이틀바 UI -->
            <Border Grid.Row="0" Background="Gray" Padding="10"
                        util:WindowBehavior.MouseDownToDragMoveCommand="{Binding DragMoveWindowCommand}">
                <!-- 타이틀 텍스트 -->
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                Text="{Binding MainBarTitleText}" Style="{StaticResource TextBlock15ptBold}"/>
            </Border>

            <!-- (규칙, 일정) 추가 -->
            <ContentControl Grid.Row="1" Content="{Binding}" Style="{StaticResource TodoContentStyle}">
            </ContentControl> 

            <!-- 등록, 취소 버튼 -->
            <Border Padding="10" Grid.Row="2">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextBlockItalic}" Text="제목을 입력하세요" VerticalAlignment="Center" Margin="2.5"
                                    Visibility="{Binding IsWarningVisible, Converter={StaticResource BoolToVis}}"/>
                    <Button Content="등록" Margin="2.5" Width="40" Height="25"
                                Command="{Binding RegisterCommand}"/>
                    <Button Content="취소" Margin="2.5" Width="40" Height="25"
                                Command="{Binding CloseWindowCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>