<Window x:Class="TODO_List.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:TODO_List.View"
        
        Title="TODO List" Height="800" MinHeight="600" Width="1100" MinWidth="750"
        WindowStyle="None"
        Style="{StaticResource CustomWindowChrome}"
        AllowsTransparency="True"
        Background="LightGray">

    <Grid>
        <!-- 전체 영역 크기 조절 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <view:MainTitleBarView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
        <view:SidePanelTasksView Grid.Column="0" Grid.Row="1"/>
        <view:CalendarView DataContext="{Binding CalendarVM}" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
